# =============================================================================
# YouTube Auto Upload Starter - Environment Configuration
# =============================================================================
# Copy this file to .env and configure the values for your setup

# -----------------------------------------------------------------------------
# DEMO MODE CONFIGURATION
# -----------------------------------------------------------------------------
# Set to 'true' for demo mode (no external APIs required)
# Set to 'false' for production mode (requires all API credentials)
DEMO_MODE=true

# -----------------------------------------------------------------------------
# TIMEZONE AND SCHEDULING
# -----------------------------------------------------------------------------
# Timezone for scheduled uploads (use standard timezone names)
TIMEZONE=Asia/Karachi

# Comma-separated list of upload times in HH:MM format
# These are the times when videos will be automatically processed and uploaded
SCHEDULE_TIMES=08:00,12:00,16:00

# -----------------------------------------------------------------------------
# YOUTUBE API CONFIGURATION
# -----------------------------------------------------------------------------
# Path to YouTube API client secrets file (downloaded from Google Cloud Console)
YOUTUBE_CLIENT_SECRETS=./client_secrets.json

# Path where OAuth token will be stored (generated by OAuth flow)
TOKEN_FILE=./token.json

# -----------------------------------------------------------------------------
# TELEGRAM BOT CONFIGURATION
# -----------------------------------------------------------------------------
# Bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Your Telegram user ID (get from @userinfobot)
TELEGRAM_ADMIN_ID=your_telegram_user_id_here

# -----------------------------------------------------------------------------
# STORAGE AND DATABASE
# -----------------------------------------------------------------------------
# Directory for storing downloaded and processed media files
STORAGE_PATH=./storage

# Database connection URL (SQLite for MVP, can be changed to PostgreSQL/MySQL)
DB_URL=sqlite:///./data/app.db

# -----------------------------------------------------------------------------
# BRANDED ASSETS
# -----------------------------------------------------------------------------
# Path to branded intro video (optional, will be concatenated with content)
BRANDED_INTRO=./assets/intro.mp4

# Path to branded outro video (optional, will be concatenated with content)
BRANDED_OUTRO=./assets/outro.mp4

# -----------------------------------------------------------------------------
# CHANNEL CONFIGURATION
# -----------------------------------------------------------------------------
# Human-readable channel title for metadata generation
CHANNEL_TITLE=My YouTube Channel

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# ADVANCED SETTINGS (Optional - defaults are usually fine)
# -----------------------------------------------------------------------------
# Maximum number of posts to download per Instagram account per run
MAX_POSTS_PER_ACCOUNT=5

# Perceptual hash threshold for duplicate detection (lower = more strict)
PHASH_THRESHOLD=10

# Maximum retry attempts for failed operations
MAX_RETRY_ATTEMPTS=3

# YouTube upload chunk size in bytes
YOUTUBE_UPLOAD_CHUNK_SIZE=1048576

# Download timeout in seconds
DOWNLOAD_TIMEOUT=300
